<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.WikiFragment">

    <com.xuexiang.xui.widget.button.RippleView
        android:id="@+id/ship_wiki_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="?attr/themeBGColor"
        app:rv_type="doubleRipple">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@mipmap/saratoga_q"
            android:drawablePadding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/wiki_ship"
            android:textSize="25sp"
            android:textColor="?attr/themeUIColor"
            android:gravity="center_vertical"
            tools:textColor="@android:color/black"/>

    </com.xuexiang.xui.widget.button.RippleView>

</LinearLayout>